{
  "extends": [
    "airbnb"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "commonjs": true,
    "es6": true,
    "jest": true,
    "browser": true,
    "worker": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5"
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "arrow-body-style": [
      "error",
      "always"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ]
  }
}